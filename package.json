{
  "name": "ayat",
  "displayName": "Ayat",
  "description": "Get a verse(an aya) from the Quran during your coding session ðŸ’» stay connected with the words of Allah. ðŸ•‹ðŸ’š ",
  "version": "2.3.0",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HussamAdil/Ayat.git"
  },
  "license": "MIT",
  "publisher": "Hussamadil",
  "author": "Hussam adil <hussam0683@gmail.com>",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "quotes",
    "motivation",
    "quran",
    "ayat",
    "Islam"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Ayat",
      "properties": {
        "ayat.language": {
          "type": "string",
          "description": "Select preferable language",
          "default": "Arabic",
          "order": 1,
          "enum": [
            "Arabic",
            "English"
          ]
        },
        "ayat.repeatedEveryMinute": {
          "type": "number",
          "default": 15,
          "order": 2,
          "enum": [
            10,
            15,
            30,
            60,
            90,
            120,
            180
          ],
          "description": "Select time between ayat notification."
        },
        "ayat.getSuraName": {
          "type": "boolean",
          "order": 3,
          "description": "Get Sura Name with Aya",
          "default": true
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.61.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  },
  "dependencies": {
    "axios": "^0.27.2"
  }
}
